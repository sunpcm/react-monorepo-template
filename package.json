{
  "name": "monorepo-study-note",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "turbo dev",
    "dev:vite": "turbo dev --filter=vite-app",
    "dev:webpack": "turbo dev --filter=webpack-app",
    "build": "turbo build",
    "build:analyze:vite": "cross-env ANALYZE=true turbo build --filter=vite-app",
    "build:analyze:webpack": "cross-env ANALYZE=true SOURCE_MAP=true turbo build --filter=webpack-app",
    "prepare": "husky",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "clean": "find . -name node_modules -type d -prune -exec rm -rf '{}' +",
    "clean:cache": "find . \\( -name .turbo -o -name dist -o -name .vite -o -name .webpack_cache -o -name node_modules\\.vite \\) -type d -prune -exec rm -rf '{}' +",
    "clean:all": "pnpm run clean:cache && pnpm run clean && rm -rf pnpm-lock.yaml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.26.0",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@niu/eslint-config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
